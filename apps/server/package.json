{
  "name": "server",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/index.ts --include src/**/*.ts --clear-screen=false",
    "build": "tsc --build",
    "postbuild": "cp src/docs/openapi.yaml dist/docs/openapi.yaml || true",
    "start": "node dist/index.js",
