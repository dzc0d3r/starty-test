{
  "name": "db",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "tsc --build",
    "db:generate": "prisma generate",
    "db:migrate": "docker-compose up -d --build --no-recreate db && prisma migrate dev",
    "db:studio": "prisma studio",
    "db:up": "docker-compose up -d --build db",
    "db:down": "docker-compose stop db",
    "postinstall": "prisma generate"
  },
  "dependencies": {
    "@prisma/client": "^5.22.0",
    "@prisma/extension-accelerate": "^2.0.2"
  },
  "devDependencies": {
    "@types/node": "^24.8.1",
    "@workspace/typescript-config": "workspace:*",
    "prisma": "^5.22.0"
  },
  "prisma": {
    "schema": "prisma/schema.prisma"
  },
  "exports": {
    ".": "./src/index.ts"
  }
}
