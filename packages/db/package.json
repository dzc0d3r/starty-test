{
  "name": "db",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "tsc --build && pnpm db:generate",
    "db:generate": "prisma generate",
    "db:migrate": "docker-compose up -d --build --no-recreate db && prisma migrate dev",
    "db:studio": "prisma studio",
    "db:up": "docker-compose up -d --build db",
    "db:down": "docker-compose stop db",
    "db:seed": "pnpm db:up && prisma db seed",
    "postinstall": "prisma generate"
  },
  "dependencies": {
    "@prisma/client": "^5.22.0",
    "@prisma/extension-accelerate": "^2.0.2"
  },
  "devDependencies": {
    "@faker-js/faker": "^10.1.0",
    "@types/node": "^24.8.1",
    "@workspace/typescript-config": "workspace:*",
    "argon2": "^0.44.0",
    "prisma": "^5.22.0",
    "tsx": "^4.20.6"
  },
  "prisma": {
    "schema": "prisma/schema.prisma",
    "seed": "tsx prisma/seed.ts"
  },
  "exports": {
    "./client": "./dist/index.js"
  }
}
