{
  "extends": "@workspace/typescript-config/react-library.json",
  "include": ["src"],
  "compilerOptions": {
    "target": "ES2016",
    "module": "nodenext",
    "outDir": "./dist",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "sourceMap": true,
    "types": ["vite/client", "node"],
    "declaration": true,
    "declarationMap": true
  },
  "exclude": ["node_modules", "dist"]
}
